<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MusicClub" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Brand Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Backgrounds -->
        <item name="android:windowBackground">@color/bg_main_dark</item>
        <item name="colorSurface">@color/bg_surface_dark</item>


        <!-- Text -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_dark</item>


        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/bg_main_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Buttons -->
        <item name="materialButtonStyle">@style/Widget.MusicTeam.Button.Dark</item>

        <!-- TextInput -->
        <item name="textInputStyle">@style/Widget.MusicTeam.TextInput.Dark</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="dividerColor">@color/divider_dark</item>
    </style>

    <!-- ========================= -->
    <!-- Button Dark -->
    <!-- ========================= -->
    <style name="Widget.MusicTeam.Button.Dark" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- ========================= -->
    <!-- TextInput Dark -->
    <!-- ========================= -->
    <style name="Widget.MusicTeam.TextInput.Dark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/bg_surface_dark</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="hintTextColor">@color/text_secondary_dark</item>
    </style>

</resources>