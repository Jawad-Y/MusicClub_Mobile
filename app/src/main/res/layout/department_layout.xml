<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:padding="16dp"
    android:layout_margin="30dp">

    <!-- Page Title -->
    <TextView
        android:id="@+id/tvDepartmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/department"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvDepartmentSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/department_subtitle"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvDepartmentTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Add Department Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddDepartment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_department"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvDepartmentSubtitle"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Departments List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDepartments"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnAddDepartment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>