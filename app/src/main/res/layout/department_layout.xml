<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    android:padding="16dp"
    android:layout_marginTop="30dp">

    <!-- Page Title -->
    <TextView
        android:id="@+id/tvDepartmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/department"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginBottom="4dp" />


    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvDepartmentSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/department_subtitle"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginTop="6dp" />

    <!-- Add Department Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddDepartment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_department"
        android:textColor="?attr/colorSecondary"
        android:layout_marginTop="12dp"
        app:icon="@drawable/ic_groups"
        app:iconPadding="8dp"
        app:iconTint="?attr/colorSecondary"/>



    <!-- Departments List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDepartments"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1" />

</LinearLayout>
