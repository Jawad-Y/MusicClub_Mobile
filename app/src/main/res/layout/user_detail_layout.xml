<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Back Arrow -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/profile_image"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:tint="?attr/colorOnSurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Scrollable content below header/avatar -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <!-- Name (read-only display) -->
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:gravity="center"
                tools:text="Alex Johnson" />

            <!-- Editable name (shown in edit mode) -->
            <EditText
                android:id="@+id/name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:hint="@string/label_username"
                android:autofillHints="name"
                android:textSize="18sp"
                android:inputType="textPersonName"
                android:layout_marginTop="8dp" />

            <!-- Email (display) -->
            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:gravity="center"
                android:layout_marginTop="4dp"
                tools:text="alexjohnson@example.com" />

            <!-- Editable email (shown in edit mode) -->
            <EditText
                android:id="@+id/email_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:hint="@string/label_email"
                android:autofillHints="emailAddress"
                android:inputType="textEmailAddress"
                android:layout_marginTop="8dp" />

            <!-- Classes Joined section -->
            <TextView
                android:id="@+id/label_classes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textColor="?attr/colorPrimary"
                android:text="@string/classes_joined" />

            <!-- RecyclerView for classes joined (populate via adapter). Nested scrolling disabled for NestedScrollView parent. -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/classes_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="8dp"
                tools:listitem="@android:layout/simple_list_item_1" />

            <!-- Attendance History section -->
            <TextView
                android:id="@+id/label_attendance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textColor="?attr/colorPrimary"
                android:text="@string/attendance_history" />

            <!-- RecyclerView for attendance history -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/attendance_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="8dp"
                tools:listitem="@android:layout/simple_list_item_1" />

            <!-- Spacer to ensure content can scroll above bottom navs if present -->
            <View
                android:layout_width="match_parent"
                android:layout_height="48dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Edit button anchored to top-end -->
    <Button
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:contentDescription="@string/action_edit"
        android:text="@string/action_edit"
        android:textAllCaps="false"
        android:textColor="?attr/colorSurface"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>