<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Department Name -->
        <TextView
            android:id="@+id/tvDepartmentName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sample_department_name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Leader -->
        <TextView
            android:id="@+id/tvDepartmentLeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sample_department_leader"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvDepartmentName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- View Classes Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewClasses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_classes"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvDepartmentLeader"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Edit Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditDepartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvDepartmentLeader"
            app:layout_constraintStart_toEndOf="@id/btnViewClasses"
            android:layout_marginStart="8dp" />

        <!-- Delete Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteDepartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvDepartmentLeader"
            app:layout_constraintStart_toEndOf="@id/btnEditDepartment"
            android:layout_marginStart="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>