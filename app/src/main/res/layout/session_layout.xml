<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="35dp"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/tvSessionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/session_title"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="6dp"/>

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/session_subtitle"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="40dp"/>

        <!-- Section header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/session_information"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceTitleSmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/session_information_desc"
            android:textSize="13sp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="25dp"/>

        <!-- Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_date"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceTitleSmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/value_date"
            android:textSize="13sp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="10dp"/>

        <!-- Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_time"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceTitleSmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/value_time"
            android:textSize="13sp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="10dp"/>

        <!-- Trainer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_trainer"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceTitleSmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvTrainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/value_trainer"
            android:textSize="13sp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="10dp"/>

        <!-- Location -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_location"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceTitleSmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="@string/value_location"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="12dp"/>

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_description"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceTitleSmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/value_description"
            android:textSize="13sp"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="16dp"/>

        <!-- Attendance -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attendance_status"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceTitleSmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvAttendanceTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attendance_total"
            android:textSize="14sp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvAttendancePresent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attendance_present"
            android:textSize="14sp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/tvAttendanceAbsent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attendance_absent"
            android:textSize="14sp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorError"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/tvAttendanceLate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attendance_late"
            android:textSize="14sp"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="@color/state_warning"
            android:layout_marginBottom="16dp"/>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minHeight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/action_edit"
                android:textColor="?attr/colorSecondary"
                android:layout_margin="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minHeight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/action_delete"
                android:textColor="?attr/colorSecondary"
                android:layout_margin="8dp"
                app:backgroundTint="?attr/colorError"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>