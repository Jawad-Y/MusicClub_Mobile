<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="35dp"
    android:background="?attr/colorSurface">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/training_sessions_title"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAppearance="?attr/textAppearanceHeadlineLarge"
        android:textColor="?attr/colorOnSurface"/>

    <!-- Subtitle + Add button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="14dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/training_sessions_subtitle"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="?attr/colorOnSurfaceVariant"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddSession"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/action_add_session"
            android:textSize="11sp"
            android:minHeight="0dp"
            android:insetTop="0dp"
            android:layout_margin="10dp"
            android:insetBottom="0dp"
            android:paddingHorizontal="8dp"/>
    </LinearLayout>

    <!-- Filters -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="35dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAllSessions"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/filter_all"
            android:textSize="13sp"
            android:minHeight="0dp"
            android:padding="3dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:layout_margin="5dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUpcomingSessions"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/filter_upcoming"
            android:textSize="13sp"
            android:minHeight="0dp"
            android:insetTop="0dp"
            android:padding="3dp"
            android:insetBottom="0dp"
            android:layout_margin="5dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAttendance"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="@string/filter_attendance"
            android:textSize="11sp"
            android:minHeight="0dp"
            android:insetTop="0dp"
            android:padding="12dp"
            android:insetBottom="0dp"
            android:layout_margin="5dp"/>
    </LinearLayout>

    <!-- Sessions list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sessionRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"/>
</LinearLayout>